<div class="container my-5 edit-account-container col-md-5">
  <h2 class="text-center edit-account-title mb-4">Edit profile</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-account-form-container" }) do |f| %>
    <%= f.error_notification %>

    <div class="edit-account-form-inputs">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "edit-account-form-control form-control" } %>
      <br>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="edit-account-text-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :current_password, required: true, input_html: { autocomplete: "current-password", class: "edit-account-form-control form-control" } %>
      <br><hr>
      <%= f.input :password, label: "New Password (optional)", required: false, input_html: { autocomplete: "new-password", class: "edit-account-form-control form-control" } %>
      <br>
      <%= f.input :password_confirmation, required: false, label: "New Password Confirmation (optional)", input_html: { autocomplete: "new-password", class: "edit-account-form-control form-control" } %>
      <br>
    </div>

    <div class="edit-account-form-actions text-center">
      <%= f.button :submit, "Update", class: "btn btn-primary edit-account-submit-btn" %>
    </div>
  <% end %>

  <div class="mt-5 text-center">
    <h3 class="edit-account-cancel-title text-danger">Cancel my account</h3>
    <p>This cannot be undone! <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger edit-account-delete-btn mt-2" %></p>
  </div>
</div>
