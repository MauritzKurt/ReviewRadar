<h2 class="text-center mb-4">Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
  <div class="container col-md-5">
    <div class="form-inputs">
      <div class="mb-3">
        <%= f.input :email, 
                  required: false, 
                  autofocus: true, 
                  input_html: { autocomplete: "email", class: 'form-control' }, 
                  wrapper_html: { class: 'form-group' }, 
                  label_html: { class: 'form-label' } %>
      </div>

      <div class="mb-3">
        <%= f.input :password, 
                  required: false, 
                  input_html: { autocomplete: "current-password", class: 'form-control' }, 
                  wrapper_html: { class: 'form-group' }, 
                  label_html: { class: 'form-label' } %>
      </div>

      <div class="mb-3">
        <%= f.input :remember_me, 
                  as: :boolean, 
                  input_html: { class: 'form-check-input' }, 
                  wrapper_html: { class: 'form-group form-check' }, 
                  label_html: { class: 'form-check-label' } if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
