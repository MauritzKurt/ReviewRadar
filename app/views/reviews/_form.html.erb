<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :author_id, style: "display: none" %>
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>

  <div class="mb-3">
    <%= form.label :reviewable_type, 'Choose Type:', class: 'form-label' %>
    <div class="form-check">
      <%= form.radio_button :reviewable_type, 'Company', class: 'form-check-input', id: 'company', checked: true %>
      <%= form.label :reviewable_type, 'Company', class: 'form-check-label', for: 'company' %>
    </div>
    <div class="form-check">
      <%= form.radio_button :reviewable_type, 'Product', class: 'form-check-input', id: 'product' %>
      <%= form.label :reviewable_type, 'Product', class: 'form-check-label', for: 'product' %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :reviewable_id, 'Select Item:', class: 'form-label' %>
    <%= form.select :reviewable_id, options_for_select(@items.map { |item| [item.name, item.id] }), {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :content, 'Review Content:', class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control', rows: 4 %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.check_box :status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
