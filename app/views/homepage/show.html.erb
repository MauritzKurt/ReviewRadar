<div style="text-align: center;">
  <h1>ReviewRadar<h1>
  <h3>Trustworthy reviews, Simplified.<h3>
</div>

<hr>

<div style="text-align: center;">
  <h3>Search for Products or Companies</h3>

  <%= form_with url: search_path, method: :get, local: true do %>
    <div class="field">
      <%= label_tag :q, "Search for Products or Companies" %>
      <%= text_field_tag :q, params[:q] %>
    </div>
    <div class="actions">
      <%= submit_tag "Search" %>
    </div>
  <% end %>
</div>
