<p style="color: green"><%= notice %></p>

<h1><%= @product.name %></h1>

<%= render @product %>

<h2>Reviews</h2>
<div class="reviews-list">
  <% if @reviews.any? %>
    <% @reviews.each do |review| %>
      <div class="review-card">
        <p class="review-title"><strong>Title:</strong> <%= review.title %></p>
        <p class="review-body"><strong>Body:</strong> <%= review.body %></p>
        <p class="review-author"><strong>Author:</strong> <%= review.author.username %></p>
      </div>
    <% end %>
  <% else %>
    <p>No reviews found.</p>
  <% end %>
</div>

<div>
  <%= link_to "Back", :back %>
</div>

<% if current_user.admin? %>
  <div>
    <%= link_to "Edit this product", edit_product_path(@product) %> |
    <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
