<h1><%= @product.name %></h1>

<%= render @product %>

<h2>Reviews</h2>

<div id="new-review-form" class="mt-3 p-4 bg-light border rounded shadow-sm">
  <%= render partial: 'reviews/review_form', locals: { review: @product.reviews.build } %>
</div>

<br>

<div id="reviews-list">
  <% if @reviews.any? %>
    <% @reviews.each do |review| %>
      <%= render review %>
    <% end %>
  <% else %>
    <p>No reviews found.</p>
  <% end %>
</div>

<% if current_user.admin? %>
  <div>
    <%= link_to "Edit this product", edit_product_path(@product) %> |
    <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
